<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.krrishdholakia.projectapollox2v5.MainActivity"
    android:id="@+id/relative_ly">

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progress_bar"
        android:layout_width = "match_parent"
        android:layout_height="10sp"
        android:indeterminate="true"/>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.krrishdholakia.projectapollox2v5.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/Age_Layout"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop = "30sp"
                android:layout_marginLeft="15sp"
                android:text="AGE"
                android:textSize="30sp"
                android:id="@+id/Age_Txt_Vw"/>
            <EditText
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginTop = "25sp"
                android:inputType="number"
                android:id="@+id/Age_Edt_Txt_check_up"
                android:layout_weight="0.02"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@id/Age_Layout"
        android:id="@+id/Sex_Layout"
        android:layout_marginTop="20sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text = "SEX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop = "20sp"
                android:layout_marginLeft="15sp"
                android:textSize="30sp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:layout_alignParentRight="true"
                android:id="@+id/spinner_sex_check_up">
            </Spinner>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/Sex_Layout"
        android:id="@+id/RestingBP_Layout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop = "30sp"
                android:layout_marginLeft="15sp"
                android:textSize="30sp"
                android:text="REST BP"
                android:id="@+id/RestingBP_Txt_Vw" />

            <EditText
                android:layout_width="110sp"
                android:gravity="right"
                android:layout_marginBottom="30sp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:id="@+id/RestingBP_Edt_Txt_check_up"
                android:layout_weight="0.02"
                android:layout_alignParentRight="true"/>/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/RestingBP_Layout"
        android:id="@+id/Cholestrol_Layout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text = "Cholesterol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop = "30sp"

                android:layout_marginLeft="15sp"
                android:textSize="30sp"
                android:id="@+id/cholesterol_Txt_Vw"/>

            <EditText
                android:layout_width="110sp"
                android:gravity="right"
                android:layout_marginBottom="30sp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:id="@+id/Cholestrol_Edt_Txt_check_up"
                android:layout_weight="0.02"
                android:layout_alignParentRight="true"/>/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/Cholestrol_Layout"
        android:id="@+id/MaxHR_Layout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text = "MAX HR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="15sp"
                android:layout_marginTop = "30sp"
                android:textSize="30sp"/>

            <EditText
                android:layout_width="110sp"
                android:layout_height="match_parent"
                android:layout_marginBottom="30sp"
                android:inputType="number"
                android:id="@+id/MaxHR_Edt_Txt_check_up"
                android:layout_weight="0.02"
                android:layout_alignParentRight="true"/>/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/MaxHR_Layout"
        android:id="@+id/Thalas_Layout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text = "THAL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginTop = "30sp"
                android:textSize="30sp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:layout_alignParentRight="true"
                android:id="@+id/spinner_thal_check_up"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>

    </RelativeLayout>
